                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Price"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:layout_marginLeft="40dp"/>

